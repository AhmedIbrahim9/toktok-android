<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/newmessage_toolbal_friends_top"
            android:layout_height="wrap_content">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/newmessage_friends_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/lorem" />

            <TextView
                android:id="@+id/newmessage_toolbar_friends_text"
                android:layout_width="wrap_content"
                android:text="Lorem Ipsum"
                android:textSize="18dp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:layout_toRightOf="@id/newmessage_friends_img"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />


            <ImageButton
                android:src="@drawable/ic_content_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cardboard_ripple"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/newmessage_toolbal_friends_top"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <include layout="@layout/new_message_toolbar_friend_mini"></include>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>