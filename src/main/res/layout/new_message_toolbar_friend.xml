<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

            <com.github.siyamed.shapeimageview.CircularImageView
                app:siBorderAlpha="0.0"
                android:id="@+id/new_message_friends_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/new_message_toolbar_friends_text"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/textDarkColor"
                android:fontFamily="sans-serif-light"
                android:layout_toRightOf="@id/new_message_friends_img"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />


            <ImageButton
                android:src="@drawable/ic_content_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cardboard_ripple"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="8dp" />

    </RelativeLayout>


        <include layout="@layout/new_message_toolbar_friend_mini"/>

    </LinearLayout>

</android.support.v7.widget.CardView>