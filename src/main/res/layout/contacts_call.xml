<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="36dp"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:tint="#DC4254"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_communication_call" />

        <TextView
            android:padding="18dp"
            android:layout_marginLeft="56dp"
            android:id="@+id/contacts_item_voice_call"
            android:text="Voice Call Lorem Ipsum"
            android:fontFamily="sans-serif-light"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_centerVertical="true"
            android:background="#D7D7D7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="56dp" />

        <TextView
            android:padding="18dp"
            android:layout_marginLeft="56dp"
            android:id="@+id/contacts_item_video_call"
            android:layout_below="@id/contacts_item_voice_call"
            android:fontFamily="sans-serif-light"
            android:textAllCaps="false"
            android:text="Video Call Lorem Ipsum"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</android.support.v7.widget.CardView>