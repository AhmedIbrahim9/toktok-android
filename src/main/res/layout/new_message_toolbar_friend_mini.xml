<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_corners"
    android:orientation="horizontal"
    android:padding="0dp">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/newmessage_friends_mini_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/lorem" />

    <TextView
        android:id="@+id/newmessage_friends_mini_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/newmessage_friends_mini_img"
        android:fontFamily="sans-serif-light"
        android:text="Lorem Ipsum"
        android:textColor="#000000" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/newmessage_friends_mini_text"
        android:background="@null"
        android:src="@drawable/ic_content_clear_mini" />

</RelativeLayout>